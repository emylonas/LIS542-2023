<?xml version="1.0"?>
<gravestones>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    
    <!-- Gravestones Schema -->
    <xs:element name="gravestone">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="nameDeceased" type="xs:string"/>
                <xs:element name="nameFamily" type="xs:string" minOccurs="0"/>
                <xs:element name="nameOthers" type="xs:string" minOccurs="0"/>
                <xs:element name="placeBirth" type="xs:string"/>
                <xs:element name="placeOther" type="xs:string"/>
                <xs:element name="dateBirth" type="xs:date" minOccurs="0"/>
                <xs:element name="dateDeath" type="xs:date"/>
                <xs:element name="age" type="xs:string" minOccurs="0"/>
                <xs:element name="epitaph" type="xs:string" minOccurs="0"/>
                <xs:element name="epitaphOriginal" type="xs:string" minOccurs="0"/>
                <xs:element name="featuresSymbols" type="xs:string" minOccurs="0"/>
                <xs:element name="featuresCondition" type="xs:string" minOccurs="0"/>
                <xs:element name="featuresOther" type="xs:string" minOccurs="0"/>
            </xs:sequence>
            <xs:attribute name="subject" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>  
</xs:schema>



    <gravestone subject="Publius Oppius, Roman Soldier">
        <nameDeceased>P(ublius) Oppi[us</nameDeceased>
        <nameFamily>Camilia</nameFamily>
        <nameOthers>Legio V</nameOthers>
        <placeBirth>Ravenna
            </placeBirth>
        <placeOther>
            Macedonia
        </placeOther>
        <dateBirth></dateBirth>
        <dateDeath></dateDeath>
        <age>30 years</age>
        <epitaph>P(ublius) Oppi[us, son of...],
            of (the tribe of) Camilia,
            ...cio, of Ravenna,
            soldier of the Legio V
            5 Macedonica, (of the rank of) optio,
            lived
            30 years, served in the army nine
            years
            (and) is buried here.
            (His) heir made (this tombstone).</epitaph>
        <epitaphOriginal> Publius Oppius filius
            Camilia [.3 char. .]
            CIO Ravenna
            miles legionis V
            Macedonicae, optio,
            vixit annos
            XXX, militavit annos VIIII.
            Hic situs est.
            Heres fecit.</epitaphOriginal>
        <featuresSymbols></featuresSymbols>
        <featuresCondition>Structural damage on upper left section of grave.</featuresCondition>
        <featuresOther>Text in Ancient Latin</featuresOther>
    </gravestone>
    
